{% extends "layoutAdmin.njk"%}

{% block content %}

    <div class="texto">
        <h3>Gerenciar receitas</h3>
    </div>

    <section class="cards">

        {% for recipe in recipes %}
            <div class="cardr" id="">
                <div class="card__image-container">
                    <img src="{{recipe.image}}" alt="imagem de {{recipe.title}}">
                </div>

                <div class="info">
                    <div class="card__content">
                        <p>{{recipe.title}}</p>
                    </div>

                    <div class="card__info">
                        <p>por
                            {{recipe.author}}</p>
                    </div>

                    <div class="card__view">
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>

                </div>
            </div>
        {% endfor %}

    </section>

{% endblock content %}