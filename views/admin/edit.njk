{% extends "layoutAdmin.njk" %}

{% block content %}

    {% block head %}
        <title>Detalhes da receita</title>
        <link rel="stylesheet" href="/styles/admin/edit.css">
        <link rel="stylesheet" href="/styles/admin/admin.css">
        <link rel="stylesheet" href="/styles/admin/create.css">

    {% endblock %}

    <div class="title-buttons">
        <div class="title">
            <h1>Editando receita</h1>
        </div>
        <div class="buttons">
            <div class="delete">
                <button type="submit">Deletar</button>
            </div>
            <div class="save">
                <button type="submit">Salvar Receita</button>
            </div>
        </div>
    </div>
    <form action="/admin/recipes/" class="card" method="POST">
        {% include 'admin/fields.njk' %}
    </form>
    <script src="/scripts/admin/admin.js"></script>

{% endblock content %}